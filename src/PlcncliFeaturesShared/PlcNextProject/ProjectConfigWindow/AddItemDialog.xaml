<platformui:DialogWindow  xmlns:platformui="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.15.0"
                          x:Class="PlcncliFeatures.PlcNextProject.ProjectConfigWindow.AddItemDialog"
                          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                          xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                          xmlns:commonConverter="clr-namespace:PlcncliCommonUtils.Converter"
                          mc:Ignorable="d" 
                          Width="530"
                          SizeToContent="Height"
                          Title="{Binding WindowTitle}"
                          Name="AddItemDialogWindow">
    <Window.Resources>
        <ResourceDictionary>
            <commonConverter:InverseStringToBooleanConverter x:Key="InverseStringToBooleanConverter"/>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Margin="11">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" 
                   Grid.ColumnSpan="99"
                   Text="{Binding Description}"
                   Margin="0,0,0,11"/>
        <Label Grid.Row="1"
               Margin="0,0,5,11"
               Padding="0"
               VerticalContentAlignment="Center"
               Content="_Key:"
               Target="{Binding ElementName=KeyTextBox}"/>
        <TextBox Grid.Row="1" 
                 Grid.Column="1"
                 Grid.ColumnSpan="2"
                 Margin="0,0,0,11"
                 Height="22"
                 VerticalContentAlignment="Center"
                 Name="KeyTextBox"
                 Text="{Binding Key, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Grid.Row="2"
               Margin="0,0,5,11"
               Padding="0"
               VerticalAlignment="Top"
               Content="_Value:"
               Target="{Binding ElementName=ValueTextBlock}"/>
        <TextBox Grid.Row="2" 
                 Grid.Column="1"
                 Grid.ColumnSpan="2"
                 Height="50"
                 Name="ValueTextBlock"
                 VerticalAlignment="Center"
                 Margin="0,0,0,11"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 Text="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

        <Button Content="_OK" 
                Grid.Row="3" 
                Grid.Column="1"
                HorizontalAlignment="Right" 
                VerticalAlignment="Bottom"
                Height="23"
                Width="75"
                Margin="0,0,5,0"
                IsDefault="True"
                Command="{Binding OKCommand}"
                CommandParameter="{Binding ElementName=AddItemDialogWindow}"
                IsEnabled="{Binding ElementName=KeyTextBox, Path=Text, Converter={StaticResource InverseStringToBooleanConverter}}"/>
        <Button Content="_Cancel"
                Grid.Row="3"
                Grid.Column="2"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Height="23"
                Width="75"
                Command="{Binding CancelCommand}"
                CommandParameter="{Binding ElementName=AddItemDialogWindow}"/>
    </Grid>
</platformui:DialogWindow>
